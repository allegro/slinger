<?xml version="1.0" encoding="utf-8"?>
<manifest package="pl.allegro.android.slinger.example"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <meta-data
            android:name="IntentResolver"
            android:value="pl.allegro.android.slinger.example.ExampleIntentResolver" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/activity_about">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/activity_contact">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="pl.allegro.android.slinger.SlingerActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Slinger.NoUi">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="example.com"
                    android:pathPattern="/.*"
                    android:scheme="http"/>

                <data
                    android:host="example.com"
                    android:pathPattern="/.*"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
